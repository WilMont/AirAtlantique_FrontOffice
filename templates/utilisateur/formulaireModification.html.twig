{% extends 'base.html.twig' %}

{% block title %}{{ titre }}{% endblock %}

{% block body %}
<h1>{{ titre }}</h1>

<form action="{{ path('profil', { 'id_utilisateur': app.user.id }) }}">
<button class="btn btn-secondary red">Annuler</button>
</form>

<br>

<div class="row">
{{ form_start(form) }}
    {{ form_errors(form) }}

    <div class="divider"></div>
        <div class="section">
            <h5>Général</h5>
            <br>
            <div class="row">
                <div class="col s12">{{ form_row(form.username, {value : app.user.username}) }}</div>
            </div>
            <div class="row">
                <div class="col s12">{{ form_row(form.email, {value : app.user.email}) }}</div>
            </div>
    </div>

<br>

<div class="divider"></div>
        <div class="section">
            <h5>Informations personnelles</h5>
            <br>
            <div class="row">
                <div class="col s12">{{ form_row(form.nom, {value : app.user.nom}) }}</div>
            </div>
            <div class="row">
                <div class="col s12">{{ form_row(form.prenom, {value : app.user.prenom}) }}</div>
            </div>
            <div class="row">
                <div class="col s12">{{ form_row(form.dateNaissance, {value : app.user.dateNaissance|date('d/m/Y')}) }}</div>
            </div>
            <div class="row">
                <div class="col s12">{{ form_row(form.numeroTelephone, {value : app.user.numeroTelephone}) }}</div>
            </div>
            <div class="row">
                <div class="col s12">{{ form_row(form.pays, {value : app.user.pays}) }}</div>
            </div>
            <div class="row">
                <div class="col s12">{{ form_row(form.adresse, {value : app.user.adresse}) }}</div>
            </div>
            <div class="row">
                <div class="col s12">{{ form_row(form.ville, {value : app.user.ville}) }}</div>
            </div>
            <div class="row">
                <div class="col s12">{{ form_row(form.codePostal, {value : app.user.codePostal}) }}</div>
            </div>
        </div>

    {{ form_row(form.submit, {label : 'Modifier'}) }}
{{ form_end(form) }}
</div>
{% endblock %}